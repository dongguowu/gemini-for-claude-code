# Required API Key
# Replace "YOUR_GEMINI_API_KEY_HERE" with your actual Google Gemini API key.
GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"

# Model Configuration
# These control which Gemini models are used when 'sonnet', 'opus', or 'haiku' are requested.
# Defaults are shown below if not set.
BIG_MODEL="gemini-1.5-pro-latest"    # Model for 'sonnet' and 'opus' requests
SMALL_MODEL="gemini-1.5-flash-latest" # Model for 'haiku' requests

# Server Configuration
HOST="0.0.0.0"
PORT=8082
LOG_LEVEL="WARNING" # e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance and Limits Configuration
MAX_TOKENS_LIMIT=8192       # Maximum tokens the model will generate
REQUEST_TIMEOUT=60          # Timeout for requests to the Gemini API (seconds)
NUM_RETRIES=10              # Number of retries for failed API requests
